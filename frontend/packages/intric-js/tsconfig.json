{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "strict": true
  },
  "include": ["./"],
  "exclude": ["node_modules", "**/*.spec.ts", "eslint.config.js"]
}
